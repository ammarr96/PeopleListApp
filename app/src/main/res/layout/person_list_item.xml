<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#F6F0EC"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp">
    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/newTV"
        android:layout_toEndOf="@id/image"
        android:textColor="@color/black"
        android:text="Amar Lubovac"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTV"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/image"
        android:text="I can help you learn Bosnian"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/newTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/green_rounded_background"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="NEW"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nativeTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/image"
        android:text="NATIVE"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nativeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/nativeTitleTV"
        android:textSize="12sp"
        android:text="EN" />

    <TextView
        android:id="@+id/learnTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/nativeTV"
        android:text="LEARNS"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/learnTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/learnTitleTV"
        android:layout_toStartOf="@id/likedImage"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="DE" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/likedImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_unliked" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#D8D8D8">
    </View>

</RelativeLayout>